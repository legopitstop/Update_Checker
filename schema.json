{
    "$id": "https://legopitstop.github.io/Update_Checker/schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema for datapack JSON Updater.",
    "definitions": {
        "MinecraftVersions": {
            "enum": [
                "1.17",
                "1.17.1",
                "1.16",
                "1.16.1",
                "1.16.2",
                "1.16.3",
                "1.16.4",
                "1.16.5",
                "1.15",
                "1.15.1",
                "1.15.2",
                "1.14",
                "1.14.1",
                "1.14.2",
                "1.14.3",
                "1.14.4",
                "1.13",
                "1.13.1",
                "1.13.2"
            ]
        },
        "versionNumber": {
            "pattern": "(d+.)?(d+.)?(*|d+)"
        },
        "PresetBackground": {
            "enum": [
                "deepslate",
                "polished_deepslate",
                "deepslate_tiles",
                "dirt",
                "stone",
                "smooth_stone",
                "granite",
                "polished_granite",
                "diorite",
                "polished_diorite",
                "andesite",
                "polished_andesite",
                "cobblestone",
                "tuff",
                "calcite",
                "snow",
                "prismarine",
                "prismarine_bricks",
                "dark_prismarine",
                "tube_coral_block",
                "brain_coral_block",
                "bubble_coral_block",
                "fire_coral_block",
                "horn_coral_block",
                "netherrack",
                "basalt",
                "smooth_basalt",
                "polished_basalt",
                "blackstone",
                "polished_blackstone",
                "lava",
                "end_stone",
                "bedrock",
                "oak_planks",
                "spruce_planks",
                "birch_planks",
                "jungle_planks",
                "acacia_planks",
                "dark_oak_planks",
                "crimson_planks",
                "warped_planks",
                "coal_block",
                "iron_block",
                "copper_block",
                "exposed_copper",
                "weathered_copper",
                "oxidized_copper",
                "redstone_block",
                "lapis_block",
                "gold_block",
                "diamond_block",
                "emerald_block",
                "amethyst_block",
                "quartz_block",
                "netherite_block",
                "ancient_debris",
                "slime_block",
                "honey_block",
                "honeycomb_block",
                "white_concrete",
                "orange_concrete",
                "magenta_concrete",
                "light_blue_concrete",
                "yellow_concrete",
                "lime_concrete",
                "pink_concrete",
                "gray_concrete",
                "light_gray_concrete",
                "cyan_concrete",
                "purple_concrete",
                "blue_concrete",
                "brown_concrete",
                "green_concrete",
                "red_concrete",
                "black_concrete",
                "missing",
                "none"
            ]
        },
        "changelog": {
            "title": "MCVERSION",
            "description": "Key must be the minecraft version.",
            "type": "object",
            "default": {},
            "additionalProperties": {
                "title": "MODVERSION",
                "description": "Key must be the mod version. Value is the changelog for the update. Changelogs support markdown style. use `\n` to enter down one line.",
                "type": "string"
            }
        }
    },
    "properties": {
        "__comment": {
            "title": "Ignored!"
        },
        "credit": {
            "description": "Unused for the checker, but is mainly used to credit Legopitstop.",
            "type": "string",
            "default": "This update file uses the webpage created by Legopitstop, https://legopitstop.github.io/Update_Checker/"
        },
        "homepage": {
            "description": "The link under homepage is the link the user will be shown when the mod is outdated.",
            "type": "string",
            "contentMediaType": "uri"
        },
        "promos": {
            "description": "A list of minecraft versions that contain the recomdend or latest version",
            "type": "object",
            "default": {},
            "patternProperties": {
                "(1.13|1.13.1|1.13.2|1.13.3|1.14|1.14.1|1.14.2|1.14.3|1.14.4|1.15|1.15.1|1.15.2|1.16|1.16.1|1.16.2|1.16.3|1.16.4|1.16.5|1.17|1.17.1)(-latest|-recommended)": {
                    "title": "MCVERSION",
                    "description": "key must be formatted '<mcversion>-latest' or '<mcversion>-recommended'. Value must be the mod version",
                    "type": "string"
                }
            }
        },
        "premium_badge": {
            "title": "PREMIUM!",
            "description": "The premium badge is a diamond on the top left corner that users can click to see how to make their link premium. By setting this to false it will remove the badge, but is recomdend to keep it true.",
            "default": true,
            "type": "boolean"
        },
        "premium:description": {
            "title": "PREMIUM!",
            "description": "This will not work unless it is a Premium URL! Become a Premium member today!\nThe style description for the page. Only for premium urls!",
            "type": "object",
            "default": {},
            "additionalProperties": false,
            "properties": {
                "title": {
                    "description": "The text that shows up in the tab view. Will add 'Update Checker' at the end.",
                    "type": "string"
                },
                "theme": {
                    "description": "Choose one of the preset favicons to use or define your own.",
                    "anyOf": [
                        {
                            "type": "string",
                            "$ref": "#/definitions/PresetBackground"
                        },
                        {
                            "type": "object",
                            "required": [
                                "type",
                                "value"
                            ],
                            "allOf": [
                                {
                                    "if": {
                                        "properties": {
                                            "type": {
                                                "const": "animated"
                                            }
                                        }
                                    },
                                    "then": {
                                        "required": [
                                            "animation"
                                        ]
                                    }
                                }
                            ],
                            "properties": {
                                "type": {
                                    "description": "The type to use. for type 'base64' you can use this converter: https://www.base64encoder.io/image-to-base64-converter/",
                                    "enum": [
                                        "url",
                                        "preset",
                                        "base64",
                                        "animated"
                                    ]
                                },
                                "animation": {
                                    "title": "ANIMATED",
                                    "description": "Create an animated background.",
                                    "type": "object",
                                    "default": {},
                                    "required": [
                                        "type"
                                    ],
                                    "properties": {
                                        "type": {
                                            "description": "The type of animation to use.",
                                            "enum": [
                                                "scroll"
                                            ]
                                        },
                                        "speed": {
                                            "description": "The speed of the scrolling. In seconds",
                                            "type": "integer",
                                            "default": 40,
                                            "minimum": 1,
                                            "maximum": 3600
                                        },
                                        "direction": {
                                            "title": "SCROLL",
                                            "description": "The direction the scrolling goes",
                                            "default": "right",
                                            "enum": [
                                                "^",
                                                "v",
                                                "<",
                                                ">",
                                                "up",
                                                "down",
                                                "left",
                                                "right",
                                                "up-left",
                                                "up-right",
                                                "left-up",
                                                "right-up",
                                                "down-left",
                                                "down-right",
                                                "left-down",
                                                "right-down"
                                            ]
                                        },
                                        "repeat": {
                                            "title": "SCROLL",
                                            "description": "When true it will repeat the texture to fill the page.",
                                            "type": "boolean",
                                            "default": true
                                        },
                                        "resize": {
                                            "title": "SCROLL",
                                            "description": "When true it will resize the image to 256px squared",
                                            "type": "boolean",
                                            "default": true
                                        }
                                    }
                                },
                                "value": {
                                    "description": "The value to use.",
                                    "type": "string"
                                }
                            }
                        }
                    ]
                },
                "favicon": {
                    "description": "Choose one of the preset favicons to use or define your own.",
                    "anyOf": [
                        {
                            "type": "string",
                            "$ref": "#/definitions/PresetBackground"
                        },
                        {
                            "type": "object",
                            "required": [
                                "type",
                                "value"
                            ],
                            "properties": {
                                "type": {
                                    "description": "The type to use. for type 'base64' you can use this converter: https://www.base64encoder.io/image-to-base64-converter/",
                                    "enum": [
                                        "url",
                                        "preset",
                                        "base64",
                                        "animated"
                                    ]
                                },
                                "value": {
                                    "description": "The value to use.",
                                    "type": "string"
                                }
                            }
                        }
                    ]
                }
            }
        },
        "premium:style": {
            "title": "PREMIUM!",
            "description": "The style properties for the page. Only for premium urls!",
            "type": "object",
            "default": {},
            "additionalProperties": false,
            "properties": {
                "color": {
                    "description": "The color for the text.",
                    "type": "string",
                    "default": "#ffffff",
                    "$ref": "https://raw.githubusercontent.com/legopitstop/JSON-Schemas/main/schemas/common_regex.json#/definitions/html_colors"
                },
                "background_color": {
                    "description": "The color for the background.",
                    "type": "string",
                    "default": "#000000",
                    "$ref": "https://raw.githubusercontent.com/legopitstop/JSON-Schemas/main/schemas/common_regex.json#/definitions/html_colors"
                },
                "border_color": {
                    "description": "The color for the borders.",
                    "type": "string",
                    "default": "#000000",
                    "$ref": "https://raw.githubusercontent.com/legopitstop/JSON-Schemas/main/schemas/common_regex.json#/definitions/html_colors"
                },
                "border_radius": {
                    "description": "The radius for the border",
                    "type": "integer",
                    "default": 20,
                    "minimum": 0,
                    "maximum": 100
                },
                "button": {
                    "description": "Style for the button.",
                    "properties": {
                        "color": {
                            "description": "The color for the text.",
                            "type": "string",
                            "default": "#000000",
                            "$ref": "https://raw.githubusercontent.com/legopitstop/JSON-Schemas/main/schemas/common_regex.json#/definitions/html_colors"
                        },
                        "background_color": {
                            "description": "The color for the background.",
                            "type": "string",
                            "default": "#777777",
                            "$ref": "https://raw.githubusercontent.com/legopitstop/JSON-Schemas/main/schemas/common_regex.json#/definitions/html_colors"
                        },
                        "border_radius": {
                            "description": "The radius for the border",
                            "type": "integer",
                            "default": 10,
                            "minimum": 0,
                            "maximum": 100
                        },
                        "hoverEvent": {
                            "description": "Properties for the button when you hover over it.",
                            "properties": {
                                "color": {
                                    "description": "The color for the text.",
                                    "type": "string",
                                    "default": "#000000",
                                    "$ref": "https://raw.githubusercontent.com/legopitstop/JSON-Schemas/main/schemas/common_regex.json#/definitions/html_colors"
                                },
                                "background_color": {
                                    "description": "The color for the background.",
                                    "type": "string",
                                    "default": "#555555",
                                    "$ref": "https://raw.githubusercontent.com/legopitstop/JSON-Schemas/main/schemas/common_regex.json#/definitions/html_colors"
                                },
                                "border_radius": {
                                    "description": "The radius for the border",
                                    "type": "integer",
                                    "default": 10,
                                    "minimum": 0,
                                    "maximum": 100
                                }
                            }
                        }
                    }
                },
                "scrollbar": {
                    "description": "Style for the button.",
                    "properties": {
                        "slider": {
                            "background_color": {
                                "description": "The color for the background.",
                                "type": "string",
                                "default": "#777777",
                                "$ref": "https://raw.githubusercontent.com/legopitstop/JSON-Schemas/main/schemas/common_regex.json#/definitions/html_colors"
                            },
                            "border_radius": {
                                "description": "The radius for the border",
                                "type": "integer",
                                "default": 10,
                                "minimum": 0,
                                "maximum": 100
                            },
                            "hoverEvent": {
                                "description": "Properties for the slider when you hover over it.",
                                "properties": {
                                    "background_color": {
                                        "description": "The color for the background.",
                                        "type": "string",
                                        "default": "#555555",
                                        "$ref": "https://raw.githubusercontent.com/legopitstop/JSON-Schemas/main/schemas/common_regex.json#/definitions/html_colors"
                                    },
                                    "border_radius": {
                                        "description": "The radius for the border",
                                        "type": "integer",
                                        "default": 10,
                                        "minimum": 0,
                                        "maximum": 100
                                    }
                                }
                            }
                        },
                        "track": {
                            "background_color": {
                                "description": "The color for the background.",
                                "type": "string",
                                "default": "#777777",
                                "$ref": "https://raw.githubusercontent.com/legopitstop/JSON-Schemas/main/schemas/common_regex.json#/definitions/html_colors"
                            },
                            "border_radius": {
                                "description": "The radius for the border",
                                "type": "integer",
                                "default": 10,
                                "minimum": 0,
                                "maximum": 100
                            },
                            "hoverEvent": {
                                "description": "Properties for the track when you hover over it.",
                                "properties": {
                                    "background_color": {
                                        "description": "The color for the background.",
                                        "type": "string",
                                        "default": "#555555",
                                        "$ref": "https://raw.githubusercontent.com/legopitstop/JSON-Schemas/main/schemas/common_regex.json#/definitions/html_colors"
                                    },
                                    "border_radius": {
                                        "description": "The radius for the border",
                                        "type": "integer",
                                        "default": 10,
                                        "minimum": 0,
                                        "maximum": 100
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "patternProperties": {
        "(1.13|1.13.1|1.13.2|1.13.3|1.14|1.14.1|1.14.2|1.14.3|1.14.4|1.15|1.15.1|1.15.2|1.16|1.16.1|1.16.2|1.16.3|1.16.4|1.16.5|1.17|1.17.1)": {
            "$ref": "#/definitions/changelog"
        },
        "(\\$.*)": {
            "title": "Ignored!"
        }
    },
    "additionalProperties": false
}